<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/add-store" class="border-shadow">
                <span class="text-gradient">New Store <i class="fas fa-user"></i></span>
            </a>
        </div>

        <!-- form handling -->
        <form action="/" method="POST">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Open</th>
                        <th>Close</th>
                        <th>Status</th>
                        <th> Action </th>
            

                    </tr>
                </thead>
                <tbody>
                    <%- include('include/_show'); -%>
                </tbody>
            </table>
        </form>
        <!--<%=stores%> this command will print users in the api ,we have the info of the users in show file-->
    </div>
</main>
<!-- /Main Site -->


    

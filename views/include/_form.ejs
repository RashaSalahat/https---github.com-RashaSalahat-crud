<!-- form handling -->
<!-- in the action we're going to post the url of the routes methods -->
<!--which means when the user clicks on save btn we want to redirct him to /api/users which leads to routes methods-->
<form action="/api/stores" method="POST" id="add_store">
    <div class="new_store">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Arena">
        </div>
        <div class="form-group">
            <label for="address" class="text-light">Address</label>
            <input type="text" name="address" value="" placeholder="Rafidia">
        </div>
        <div class="form-group">
            <label for="open" class="text-light">Open At</label> 
            <input type="text" name="open" value="" placeholder="9:00 AM">
        </div>  
        <div class="form-group">
            <label for="close" class="text-light">Close At</label> 
            <input type="text" name="close" value="" placeholder="9:00 PM">
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" >
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" >
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
